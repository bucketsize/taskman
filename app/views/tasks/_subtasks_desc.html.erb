<div id="subtasks_desc" > 
	<% unless @subtasks.empty? %>
		<span class='task_id'>Subtasks</span>
		<ul>
			<% @subtasks.each do |task| %> 
				<% tp, tc = task.parent,	task.children.count %> 
				<li>
				<span>#<%= task.id %></span>
				<abbr title="<%= task.desc %>"><span style="width: 20%;"><%= task.label %></span></abbr>
				<span style="float:right;"><%= link_to "[...#{tc}]", task %>
					<%= link_to '[+-]', edit_task_path(task) %>
					<%= link_to '[X]', task, :confirm => 'Are you
					sure?', :method => :delete %></span>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>


